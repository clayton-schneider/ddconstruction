---
import { Icon } from "astro-icon";
// Import components
import NavMenu from "./NavMenu";
const links = [
  { linkText: "Home", link: "/" },
  { linkText: "About", link: "/about" },
  {
    linkText: "Services",
    link: "/services",
    sublinks: [
      { linkText: "Residential", link: "/services/residential" },
      { linkText: "Commercial", link: "/services/commercial" },
    ],
  },
  { linkText: "Contact", link: "/contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header class={(className ? className : "") + " bg-primary px-edge relative"}>
  <div class="mx-auto flex max-w-screen-2xl items-center justify-between py-6">
    <a class="text-lg font-bold" href="/">D&D Family Construction</a>

    <NavMenu links={links} client:load />
  </div>
</header>
