---
import { socials } from "@data/general";
import { hours } from "@data/general";
import { contacts } from "@data/general";
import { Icon } from "astro-icon";

const date = new Date();
---

<section
  class="border-t-8 border-t-primary bg-secondary px-edge py-10 text-text-light"
>
  <footer>
    <div
      class="mx-auto flex max-w-screen-2xl flex-col items-center justify-between gap-10 text-center lg:flex-row lg:items-start lg:text-left"
    >
      <div class="mx-auto max-w-md lg:mx-0">
        <p class="text-2xl font-bold">D&D Family Construction</p>
        <p class="mt-2 text-lg">
          With over 15 years of experience D&D Family Construction has the
          skills to work safely and effectively on a wide range of glazing
          projects.
        </p>
        <div class="mt-6 flex justify-center space-x-2 lg:justify-start">
          {
            socials.map((social) => (
              <a href={social.link} target="_blank" aria-label={social.name}>
                <Icon name={social.icon} size={30} color="white" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Link Group -->
      <div
        class="flex flex-col items-center gap-10 lg:flex-row lg:items-start lg:gap-14"
      >
        <div>
          <p class="text-lg font-bold">Our Hours</p>
          <ul class="mt-4 space-y-4 lg:mt-8">
            {
              hours.map((hour) => (
                <li>
                  <p>
                    {hour.day}: {hour.open}-{hour.close}
                  </p>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <p class="text-lg font-bold">Contact Us</p>
          <ul class="mt-4 space-y-4 lg:mt-8">
            {
              contacts.map((contact) => (
                <li class="flex justify-center space-x-2 lg:justify-start">
                  <Icon
                    name={contact.icon}
                    size={30}
                    aria-label={contact.name}
                  />
                  <p>{contact.text}</p>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </footer>
  <div class="mx-auto mt-12 max-w-screen-2xl border-t border-t-white/60">
    <p class="mt-6 text-center text-sm lg:text-left">
      Copyright Â© {date.getFullYear()} D&D Family Construction | All Rights
      Reserved | Powered By <a
        target="_blank"
        href="https://www.simply-sprout.com">Simply Sprout</a
      >
    </p>
  </div>
</section>
