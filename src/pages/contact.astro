---
import ContactForm from "@components/Forms/ContactForm";
import Icon from "astro-icon";
import Layout from "src/layouts/Layout.astro";

const fields = [
  { fieldType: "text", id: "first", name: "First Name" },
  { fieldType: "text", id: "last", name: "Last Name" },
  { fieldType: "email", id: "email", name: "Email Address" },
  { fieldType: "tel", id: "phone", name: "Phone Number" },
  { fieldType: "textarea", id: "message", name: "Message" },
];
---

<Layout
  seo={{
    title: "Contact | Simply Sprout Starter",
    description: "The starter template for all Simply Sprout websites.",
  }}
>
  <section class="relative px-edge py-10 lg:py-20">
    <div class="absolute inset-0 -z-10 bg-gray-500"></div>
    <div class="mx-auto max-w-screen-2xl">
      <div class="max-w-2xl text-text-light">
        <h2
          class="p-4 text-lg
          font-bold
           uppercase before:relative before:right-2
           before:inline-block before:h-1 before:w-1/6 before:bg-primary
           before:align-middle"
        >
          Our Story
        </h2>
        <h1
          class="relative z-40 mt-2
           text-6xl font-bold tracking-wide before:absolute
           before:left-0 before:top-0 before:-z-10 before:inline-block before:h-10 before:w-48 before:bg-primary"
        >
          Contact Us
        </h1>
        <p class="mt-7 text-lg leading-relaxed">
          With over 15 years of experience D&D Family Construction has the
          skills to work safely and effectively on a wide range of projects.
        </p>
        <a
          class="mt-7 inline-block w-full -skew-x-3 border-2 border-primary bg-primary px-10 py-4 text-center font-semibold uppercase text-secondary transition-all duration-300 hover:bg-transparent hover:text-primary lg:w-auto lg:text-left"
          href="">Request Estimate</a
        >
      </div>
    </div>
  </section>

  <section class="px-edge py-10 lg:py-20">
    <div class="mx-auto max-w-screen-2xl">
      <div class="flex flex-col items-center justify-between gap-7 lg:flex-row">
        <div class="w-full max-w-md p-7">
          <Icon name="mdi:location" class="h-14 text-primary" />
          <h4 class="mt-7 text-2xl font-bold uppercase text-text-heading">
            Office Address
          </h4>
          <p class="mt-7 text-lg text-text-dark">
            935 Kenmore Rd, Philadelphia, PA 19151
          </p>
          <a
            href=""
            class="mt-7 inline-block border-b border-secondary uppercase tracking-wider text-secondary"
          >
            Get Directions
          </a>
        </div>
        <div class="w-full max-w-md bg-secondary p-7 text-text-light">
          <Icon name="mdi:email-newsletter" class="h-14 text-primary" />
          <h4 class="mt-7 text-2xl font-bold uppercase">Contact Us</h4>
          <p class="mt-7 text-lg">dw@d-dfamilyconstructionllc.com</p>
          <a
            href=""
            class="mt-7 inline-block border-b border-primary uppercase tracking-wider text-primary"
          >
            Get Directions
          </a>
        </div>
        <div class="w-full max-w-md p-7">
          <Icon name="healthicons:phone-negative" class="h-14 text-primary" />
          <h4 class="mt-7 text-2xl font-bold uppercase text-text-heading">
            Telephone
          </h4>
          <p class="mt-7 text-lg text-text-dark">215-971-0337</p>
          <a
            href=""
            class="mt-7 inline-block border-b border-secondary uppercase tracking-wider text-secondary"
          >
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="px-edge py-10 lg:py-20">
    <div class="mx-auto max-w-screen-2xl">
      <div class="grid grid-cols-1 gap-7 lg:grid-cols-2">
        <div class="h-full w-full bg-red-500"></div>
        <div class="w-full bg-secondary p-7 lg:p-14">
          <h2
            class="text-center text-5xl font-black uppercase text-text-light lg:text-left lg:text-6xl"
          >
            Leave A Message For Us
          </h2>
          <div class="mx-auto mt-7 h-1 w-full max-w-[200px] bg-primary lg:mx-0">
          </div>
          <div class="mt-7">
            <ContactForm
              client:load
              name="Simply Sprout Contact Form"
              message="Thank you for submitting this contact form. We will reach out to you shortly."
              error="There was an error submitting this form. Please refresh and try again. If the problem persists, please send us an email directly."
              fields={fields}
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
